# --- App ---
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# --- Storage ---
STORAGE_BACKEND=local
STORAGE_LOCAL_ROOT=./data
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# --- Sarvam ---
# !! SET YOUR ACTUAL KEY IN .env !!
SARVAM_API_KEY=YOUR_SARVAM_API_KEY_HERE
SARVAM_API_URL=https://api.sarvam.example/v1/transcribe

# --- Redis / Celery ---
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_DEFAULT_QUEUE=cpu_tasks

# --- Database for metadata ---
DATABASE_URL=sqlite:///./data/metadata.db

# --- Embeddings / LLM ---
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Options: 'gemini', 'openai'
LLM_PROVIDER=gemini

# !! SET THE KEY FOR YOUR CHOSEN PROVIDER IN .env !!
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
OPENAI_API_KEY=

# --- App limits (Tuning) ---
VIDEO_FRAME_INTERVAL_SEC=7
TRANSCRIPT_CHUNK_SEC=30
BATCH_EMBED_SIZE=16